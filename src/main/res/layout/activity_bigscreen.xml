<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="org.kde.kdeconnect.plugins.mousepad.BigscreenActivity">

    <include layout="@layout/toolbar" android:id="@+id/toolbar_layout" />

    <androidx.gridlayout.widget.GridLayout
        xmlns:grid="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        grid:useDefaultMargins="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/home_button"
            grid:layout_column="0"
            grid:layout_row="0"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            android:contentDescription="@string/bigscreen_home"
            grid:iconSize="32dp"
            app:icon="@drawable/ic_home_black_24dp"
            style="@style/KdeConnectButton.IconButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/up_button"
            grid:layout_column="1"
            grid:layout_row="0"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            android:contentDescription="@string/bigscreen_up"
            grid:iconSize="42dp"
            app:icon="@drawable/outline_arrow_drop_up_24"
            style="@style/KdeConnectButton.IconButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mic_button"
            grid:layout_column="2"
            grid:layout_columnWeight="1"
            grid:layout_row="0"
            grid:layout_rowWeight="1"
            android:contentDescription="@string/bigscreen_mic"
            grid:iconSize="32dp"
            app:icon="@drawable/ic_mic_black"
            style="@style/KdeConnectButton.IconButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/left_button"
            grid:layout_column="0"
            grid:layout_row="1"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            android:contentDescription="@string/bigscreen_left"
            grid:iconSize="42dp"
            app:icon="@drawable/outline_arrow_left_24"
            style="@style/KdeConnectButton.IconButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/select_button"
            grid:layout_column="1"
            grid:layout_row="1"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            android:contentDescription="@string/bigscreen_select"
            grid:iconSize="32dp"
            app:icon="@drawable/ic_keyboard_return_black_24dp"
            style="@style/KdeConnectButton.IconButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/right_button"
            grid:layout_column="2"
            grid:layout_row="1"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            android:contentDescription="@string/bigscreen_right"
            grid:iconSize="42dp"
            app:icon="@drawable/outline_arrow_right_24"
            style="@style/KdeConnectButton.IconButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/down_button"
            grid:layout_column="1"
            grid:layout_row="2"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            android:contentDescription="@string/bigscreen_down"
            grid:iconSize="42dp"
            app:icon="@drawable/outline_arrow_drop_down_24"
            style="@style/KdeConnectButton.IconButton"  />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/back_button"
            grid:layout_column="0"
            grid:layout_row="2"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            android:contentDescription="@string/bigscreen_back"
            grid:iconSize="32dp"
            app:icon="@drawable/ic_arrow_back_black_24dp"
            style="@style/KdeConnectButton.IconButton"  />
    </androidx.gridlayout.widget.GridLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
